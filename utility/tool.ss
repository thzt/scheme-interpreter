(library (utility tool)
	 (export handle-case)
	 (import (rnrs))

	 ;export
	 (define (handle-case case-list exp)
	   (if (null? case-list)
	       (error 'handle-case "all predicator return false.")
	       (let* ((head (car case-list))
		      (predicate (car head))
		      (handler (cdr head)))
		 (if (predicate exp)
		     (handler exp)
		     (handle-case (cdr case-list) exp)))))
)
